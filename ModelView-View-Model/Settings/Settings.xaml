<Window x:Class="MVVM.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="Settings" Height="274" Width="409">
    <Grid>
        <TextBox x:Name="PathTextBoxSettings" Margin="15,43,100,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True"/>
        <Button x:Name="EditButtonSettings" Content="Edit" Margin="331,0,15,197" VerticalAlignment="Bottom" Click="EditButtonSettings_Click"/>
        <Button Content="Save" Margin="15,212,282,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Exit" Margin="274,0,15,27" VerticalAlignment="Bottom" Click="Button_Click_1"/>
        <Label Content="Path for folder with Quizes" HorizontalAlignment="Left" Margin="20,13,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Window>
